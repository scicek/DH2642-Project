<UserControl x:Class="Main.Views.ActivityListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:Main.Views"
             x:Name="ActivityListCtrl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="Transparent" views:ActivityControl.Moved="ActivityControl_OnMoved">
        <ItemsControl ItemsSource="{Binding ElementName=ActivityListCtrl, Path=Activities}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <views:ActivityControl Activity="{Binding }" Margin="10, 10, 10, 0"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Rectangle Stroke="White" StrokeThickness="2" StrokeDashArray="4 4" RadiusX="5" RadiusY="5" SnapsToDevicePixels="True"/>
    </Grid>
</UserControl>
